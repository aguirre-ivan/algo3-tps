getReport
	
	| transactions result |

	result := 0.

	transactions := account transactions.
	
	transactions do: [ :aTransaction |
		(aTransaction isKindOf: TransferLeg) ifTrue: [ result := aTransaction affectBalance: result. ].
	].

	(result = 0) ifTrue: [^ '0 * pesos'. ] ifFalse: [ ^ result asString. ] .! !

